{
  "name": "nil-transparency-network",
  "version": "1.0.0",
  "description": "Universal Infrastructure for Name, Image, Likeness Monetization with enterprise-grade transparency and compliance layers",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:contracts": "hardhat compile",
    "test": "npm run test:contracts && npm run test:integration",
    "test:contracts": "hardhat test",
    "test:integration": "jest apps/",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "dev": "ts-node apps/silo-integration/SiloCloudNIL.ts",
    "deploy": "hardhat deploy",
    "start": "node dist/index.js",
    "clean": "rm -rf dist/ cache/ artifacts/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nil",
    "blockchain",
    "transparency",
    "compliance",
    "ethereum",
    "smart-contracts",
    "silo-cloud"
  ],
  "author": "kevanbtc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevanbtc/nil-transparency-network.git"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "hardhat": "^2.19.1",
    "hardhat-gas-reporter": "^1.0.9",
    "jest": "^29.7.0",
    "solidity-coverage": "^0.8.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
