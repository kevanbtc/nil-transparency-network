  "description": "Universal infrastructure for Name, Image, Likeness monetization with transparency and compliance",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "nil",
    "transparency",
    "blockchain",
    "compliance",
    "ethereum",
    "smart-contracts",
    "athletics",
    "monetization"
  ],
  "author": "NIL Transparency Network Team",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.7.1",
    "axios": "^1.5.0",
    "express": "^4.18.2",
    "@openzeppelin/contracts": "^4.9.3",
    "crypto": "^1.0.1",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kevanbtc/nil-transparency-network.git"
  },
  "bugs": {
    "url": "https://github.com/kevanbtc/nil-transparency-network/issues"
