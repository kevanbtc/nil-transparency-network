{
  "name": "nil-transparency-network",
  "version": "1.0.0",
  "description": "Universal infrastructure for Name, Image, Likeness monetization with transparency and compliance",
  "main": "index.js",
  "workspaces": [
    "api"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "clean": "rimraf dist",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy"
  },
  "keywords": [
    "nil",
    "transparency",
    "blockchain",
    "compliance",
    "ethereum",
    "smart-contracts",
    "athletics",
    "monetization"
  ],
  "author": "NIL Transparency Network Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "axios": "^1.5.0",
    "crypto": "^1.0.1",
    "ethers": "^6.7.1",
    "events": "^3.3.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.9",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "hardhat": "^2.26.3",
    "hardhat-deploy": "^1.0.4",
    "jest": "^29.7.0",
    "pg": "^8.16.3",
    "prettier": "^3.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^5.0.1",
    "solhint": "^6.0.1",
    "solidity-coverage": "^0.8.16",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kevanbtc/nil-transparency-network.git"
  },
  "bugs": {
    "url": "https://github.com/kevanbtc/nil-transparency-network/issues"
  },
  "homepage": "https://github.com/kevanbtc/nil-transparency-network#readme"
}
